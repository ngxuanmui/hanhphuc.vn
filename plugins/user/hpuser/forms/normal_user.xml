<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id: profile.xml 17890 2010-06-27 00:47:12Z infograf768 $ -->
<form>
	<fields name="user_profile">
		<fieldset name="user_profile"
			label="Thông tin cá nhân"
			addfieldpath="/administrator/components/com_jnt_hanhphuc/models/fields">
			<field name="name_of_yours" type="text"
				autocomplete="off"
				default="Hanhphuc.vn"
				description="Tên hai bạn, tên này sẽ được sử dụng trên blog"
				label="Tên hai bạn"
				size="30"
			/>
			
			<field name="website_slogan" type="text" default="Trăm năm hạnh phúc"
				description="Slogan"
				label="Slogan"
				size="30"
			/>
	
			<field name="date_organization" type="calendar" readonly="1"
				class="validate-username"
				description="Ngày tổ chức đám cưới của hai bạn"
				label="Ngày tổ chức"
				size="30"
				validate="username"
			/>
			
			<field
				name="user_city"
				type="location"
                location_type="province"
				id="user_city"
				description="Tỉnh/Thành Phố"
				filter="string"
				label="Tỉnh/Thành Phố"
				message="Tỉnh/Thành Phố"
				size="1"

			/>
	        <field
				name="user_district"
				type="location"
                location_type="district"
                location_parent_field="user_city"
                location_parent_column="province_id"
				id="user_district"
				description="Quận/Huyện"
				filter="string"
				label="Quận/Huyện"
				message="Quận/Huyện"
				size="1"
			/>
	        <field
				name="user_village"
				type="text"
				id="user_village"
				description="Xã/Phường"
				filter="string"
				label="Xã/Phường"
				message="Xã/Phường"
				size="30"
			/>

            <field
                    name="avatar"
                    type="file"
                    id="avatar"
                    description="Avatar"
                    filter="string"
                    label="Avatar"
                    message="Avatar"
                    size="30"
                    />
            <field
                    name="avatar_old"
                    type="hidden"
                    id="avatar_old"
                    />
		</fieldset>
	</fields>
</form>